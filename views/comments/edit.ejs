<%- include("../partials/header") %>

<div class="container">
    <div class="row" style="text-align: center;">
        <h1>Edit the Comment Here!</h1>
        <!-- vertical then horiz margins -->
        <div style="width: 30%; margin: 25px auto;">
            
            <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Name" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
                <!-- If button is last, it'll submit the form -->
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    
       
    </div>
    
</div>

<%- include("../partials/footer") %>