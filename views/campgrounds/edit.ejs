<%- include("../partials/header") %>

<div class="container">
    <div class="row" style="text-align: center;">
        <h1>Edit <%= campground.name %>'s Details Here!</h1>
        <!-- vertical then horiz margins -->
        <div style="width: 30%; margin: 25px auto;">
            
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Name" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Image URL" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" placeholder="Description" name="campground[description]"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
                <!-- If button is last, it'll submit the form -->
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    
       
    </div>
    
</div>

<%- include("../partials/footer") %>